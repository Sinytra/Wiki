{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/.contentlayer/*": ["./.contentlayer/*"],
      "@/public/*": ["./public/*"],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ]
}
